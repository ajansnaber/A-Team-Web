@model ANPositive.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Kodu Doğrula";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="passwordBox animated fadeInDown">
    <h1 class="logo-name text-center">AN+</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold text-center">@ViewBag.Title</h2>
                <p class="text-center">
                    Doğrulama kodunu girin.
                </p>

                @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "m-t", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("provider", @Model.Provider)
                    @Html.Hidden("rememberMe", @Model.RememberMe)

                <div class="form-group">
                    @Html.LabelFor(m => m.Code)
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>

                    <div class="form-group">
                        <div class="checkbox text-center">
                            @Html.CheckBoxFor(m => m.RememberBrowser)
                            @Html.LabelFor(m => m.RememberBrowser)
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary block full-width m-b">Gönder</button>
                }
            </div>
        </div>
    </div>

    <p class="m-t text-center">
        <small>AN+ Creative Solutions &copy; 2009 - @DateTime.Now.Year.ToString()</small>
    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}