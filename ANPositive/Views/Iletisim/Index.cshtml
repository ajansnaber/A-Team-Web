@{
    Layout = "~/Views/Shared/_Layout_tr.cshtml";
}

@section metas{
    <meta name="title" content="Anasayfa - A-Team Ship Repair Technical Services" />
    <meta name="description" content="A-Team Ship Repair Technical Services" />
    <meta name="keywords" content="ateam, gemicilik, kumanya, bakım, onarım, tamir" />
}

@section styles{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/Site/Contact/Contact.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyD9SJABQk_u1ZyaEXvjebEyYkXB3__FE6Y"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="~/Scripts/Site/Contact/Contact.min.js"></script>
    <script>
        var ajaxUrl = "@Url.Action("Send","Contact")";
    </script>
}

<div class="page-title-area pt-210 pb-210" data-background="/images/Site/Slider/1.jpg">
    <div class="container-fluid bc">
        <div class="row">
            <div class="col-xl-12">
                <div class="page-title text-center">
                    <h1>@ViewBag.Title</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item">
                                @Html.ActionLink("Anasayfa", "Index", "Home")
                            </li>
                            <li class="breadcrumb-item active" aria-current="page"> @ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-area pt-110 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-6">
                <div class="contact-info mb-30">
                    <h2>İletişim Bilgilerimiz</h2>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="contact-meta mb-30">
                                <div class="contact-meta-info">
                                    <h4>Tel</h4>
                                    <p>+90 232 464 55 42</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="contact-meta mb-30">
                                <div class="contact-meta-info">
                                    <h4>Fax</h4>
                                    <p>+90 232 464 87 63</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="contact-meta mb-30">
                                <div class="contact-meta-info">
                                    <h4>Eposta</h4>
                                    <p>info@a-team.com.tr</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="contact-meta">
                                <div class="contact-meta-info">
                                    <h4>Adres</h4>
                                    <p>Atatürk Cad. No: 380 Daire: 207 Konak, İzmir</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-7 col-lg-6">
                <div class="contact-form mb-30">
                    <form id="contact-form">
                        <div class="loadingContainer d-none">
                            <h1>gönderiliyor...</h1>
                            <div class="loading"></div>
                        </div>
                        <div class="row">
                            <div class="col-xl-6">
                                <input name="firstNameLastName" id="firstNameLastName" type="text" placeholder="Adınız, Soyadınız">
                            </div>
                            <div class="col-xl-6">
                                <input name="emailAddress" type="email" id="emailAddress" placeholder="Eposta Adresiniz">
                            </div>
                            <div class="col-xl-12">
                                <input name="emailSubject" id="emailSubject" type="text" placeholder="Konu">
                            </div>
                            <div class="col-xl-12">
                                <textarea id="emailMessage" name="emailMessage" cols="30" rows="10" placeholder="Mesajınız"></textarea>
                                <button class="btn brand-btn" type="submit">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contact-map"></div>